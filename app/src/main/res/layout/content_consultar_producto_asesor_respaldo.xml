<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.com.planit.lavapp.Adviser.ConsultarProductoAsesor"
    tools:showIn="@layout/activity_consultar_producto_asesor">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-45dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="#e8e9f4">

        <TextView
            android:layout_width="match_parent"
            android:text="Detalle Del Producto"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:layout_marginBottom="15dp"
            android:paddingTop="3dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="50dp" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Nombre Del producto: "
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Observación: "
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etObservacion"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Color: "
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/etColor" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Estado: "
            android:id="@+id/tvEstado"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/etEstado" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxHeight="100dp"
            android:layout_gravity="center_vertical"
            android:maxWidth="100dp"
            android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:id="@+id/imageView"
            android:layout_below="@+id/button"
            android:src="@mipmap/img_camara"
            android:adjustViewBounds="false"
            android:layout_gravity="center_horizontal" />

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:id="@+id/bFoto1"
            android:text="Tomar Primera Foto"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:maxHeight="100dp"
        android:layout_gravity="center_horizontal"
        android:maxWidth="100dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:id="@+id/imageView2"
            android:src="@mipmap/img_camara"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:id="@+id/bFoto2"
            android:text="Tomar Segunda Foto"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:maxHeight="100dp"
        android:layout_gravity="center_horizontal"
        android:maxWidth="100dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:id="@+id/imageView3"
            android:layout_below="@+id/button"
            android:src="@mipmap/img_camara"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/bFoto3"
            android:text="Tomar Tercera Foto"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_blue" />

        <TextView
            android:id="@+id/scan_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/scan_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />


        <Button android:id="@+id/bScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Escanear Código de Barra"
            android:background="@drawable/button_blue"/>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/bGuardar"
            android:text="Guardar Cambios"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue" />

    </LinearLayout>
</ScrollView>

