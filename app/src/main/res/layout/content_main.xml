<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".common.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/blueWater">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cleanapp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />


    <Button
        android:layout_width="140dp"
        android:id="@+id/bIniciar"
        android:text="Iniciar Sesion"
        android:layout_height="wrap_content"
        android:background="@drawable/button_blue"
        android:layout_gravity="left"
        android:layout_marginBottom="141dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:id="@+id/bContinuar"
        android:text="Continuar"
        android:layout_height="wrap_content"
        android:background="@drawable/button_blue"
        android:layout_gravity="right"

        android:layout_alignBaseline="@+id/bIniciar"
        android:layout_alignBottom="@+id/bIniciar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
